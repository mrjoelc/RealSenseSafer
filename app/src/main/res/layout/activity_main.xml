        <TextView
            android:id="@+id/connectCameraText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="280dp"
            android:layout_marginBottom="40dp"
            android:text="Connect a RealSense camera"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/buttonPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sendLogToFirebase"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:background="@drawable/log_button"
                    android:gravity="center"
                    android:text="send Log"
                    android:textColor="#FFFF"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/barchartButton"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:background="@drawable/log_button"
                    android:gravity="center"
                    android:text="log"
                    android:textColor="#FFFF"/>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/log_button"
                    android:orientation="vertical">

                    <Switch
                        android:theme="@style/SwitchTheme"
                        android:background="@drawable/log_button"
                        android:id="@+id/localImageswitch"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:text="local image / stream"
                        android:textColor="#FFFF"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>



        <com.example.testrealsense.Helper.GraphicOverlay
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/graphicOverlay"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/buttonPanel"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/connectCameraText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/black"
                android:textSize="20dp"
                android:text="Connect a RealSense camera"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/sendLogToFirebase"
                android:layout_marginTop="25dp"
                android:text="send Log To Firebase"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/barchartButton"
                android:layout_marginTop="25dp"
                android:text="Go to log"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:gravity="center"/>
        </androidx.appcompat.widget.LinearLayoutCompat>




